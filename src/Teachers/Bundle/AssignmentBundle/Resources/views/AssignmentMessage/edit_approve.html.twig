{% extends 'OroUIBundle:actions:update.html.twig' %}

{% set formAction = path('teachers_assignment_message_edit_approve', { id: assignment_message.id }) %}

{% block content_data %}
    {% set id = 'assignment-form' %}

    {% set dataBlocks = [{
        'title': 'teachers.assignment.message.block.general'|trans,
        'subblocks': [
            {
                'title': 'teachers.assignment.message.block.message_information'|trans,
                'data': [
                form_row(form.message)
            ]
            }
        ]
    }] %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}
