{% extends 'OroActivityListBundle:ActivityList/js:activityItemTemplate.html.twig' %}
{% import 'OroActivityBundle::macros.html.twig' as AC %}

{% set entityClass = 'Teachers\\Bundle\\AssignmentBundle\\Entity\\AssignmentPrivateNote' %}
{% set entityName = oro_entity_config_value(entityClass, 'label')|trans %}

{% block activityDetails %}
    {{ entityName }}
{% endblock %}

{% block activityActions %}
    {% import 'OroActivityBundle::macros.html.twig' as AC %}

    {% set action %}
        <% if (editable) { %>
        <a href="#" class="dropdown-item action item-edit-button"
           title="{{ 'teachers.assignment.private_note.update'|trans({'{{ entity }}': entityName}) }}"
           data-action-extra-options="{{ {dialogOptions: {width: 1000}}|json_encode }}">
            <span class="fa-pencil-square-o hide-text"
                  aria-hidden="true">{{ 'teachers.assignment.private_note.update'|trans({'{{ entity }}': entityName}) }}</span>
            {{ 'teachers.assignment.private_note.update'|trans({'{{ entity }}': entityName}) }}
        </a>
        <% } %>
    {% endset %}
    {% set actions = [action] %}

    {% set action %}
        <% if (removable) { %>
        <a href="#" class="dropdown-item action item-remove-button"
           title="{{ 'teachers.assignment.private_note.delete'|trans({'{{ entity }}': entityName}) }}">
            <span class="fa-trash-o hide-text"
                  aria-hidden="true">{{ 'teachers.assignment.private_note.delete'|trans({'{{ entity }}': entityName}) }}</span>
            {{ 'teachers.assignment.private_note.delete'|trans({'{{ entity }}': entityName}) }}
        </a>
        <% } %>
    {% endset %}
    {% set actions = actions|merge([action]) %}

    {{ parent() }}
{% endblock %}
