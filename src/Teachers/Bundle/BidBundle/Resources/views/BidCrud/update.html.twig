{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% oro_title_set({params : {"%entityName%": 'teachers.bid.entity_label'|trans }}) %}
{% set entityId = entity.id %}

{% block navButtons %}
    {% import 'OroUIBundle::macros.html.twig' as UI %}

    {% set html = UI.saveAndCloseButton({
        'route': 'teachers_bid_view',
        'params': {'id': '$id'}
    }) %}
    {% if is_granted('teachers_bid_create') %}
        {% set html = html ~ UI.saveAndNewButton({
            'route': 'teachers_bid_create'
        }) %}
    {% endif %}
    {% if is_granted('teachers_bid_update') %}
        {% set html = html ~ UI.saveAndStayButton({
            'route': 'teachers_bid_update',
            'params': {'id': '$id'}
        }) %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
    {{ UI.cancelButton(path('teachers_bid_index')) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if entityId %}
        {% set breadcrumbs = {
            'entity': entity,
            'indexPath': path('teachers_bid_index'),
            'indexLabel': 'teachers.bid.entity_plural_label'|trans
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'teachers.bid.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block breadcrumbs %}
    {% import 'OroUIBundle::macros.html.twig' as UI %}

    {{ parent() }}
    <span class="page-title__status">
        {% set status = {
            'open': 'enabled',
            'in_progress': 'tentatively',
            'closed': 'disabled'
        } %}
        {% if entity.status is not null %}
            {{ UI.badge(entity.status.name, status[entity.status.id] ? status[entity.status.id] : 'disabled') }}
        {% endif %}
    </span>
{% endblock breadcrumbs %}

{% block content_data %}
    {% set id = 'bid-form' %}

    {% set dataBlocks = [{
        'title': 'General Information'|trans,
        'subblocks': [
            {
                'title': '',
                'data': [
                    form_row(form.description),
                    form_row(form.status),
                    form.owner is defined ? form_row(form.owner) : '',
                    form_row(form.reminders)
                ]
            }
        ]
    }] %}

    {% set dataBlocks = dataBlocks|merge(oro_form_additional_data(form, 'Additional'|trans)) %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}
