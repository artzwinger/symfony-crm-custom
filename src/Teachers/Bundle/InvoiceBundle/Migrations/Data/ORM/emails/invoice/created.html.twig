@name = teachers_invoice_created
@entityName = Teachers\Bundle\InvoiceBundle\Entity\Invoice
@subject = OCH Invoice #{{ invoice.id }}
@isSystem = 1
@isEditable = 1

<style>
    @media (max-width: 480pt) {
        .wrapper {
            width: 100% !important;
        }
    }

    a:hover {
        text-decoration: underline;
    }
</style>
<table class="wrapper"
       style="border-collapse: collapse; width: 640px; width: 480pt; max-width: 100%; box-sizing: border-box">
    <tr>
        <td style="background-color: #ffffff; padding: 4pt">
            <p style="color: #444444; font-size: 10pt; font-family: Arial, Helvetica, sans-serif; font-weight: normal; margin: 5pt 0 10pt 0;">
                Hi, {{ invoice.student|oro_format_name }},
            </p>
            <p style="color: #444444; font-size: 10pt; font-family: Arial, Helvetica, sans-serif; font-weight: normal; margin: 5pt 0 10pt 0;">
                Please view your invoice details below.
            </p>
            <p style="color: #444444; font-size: 10pt; font-family: Arial, Helvetica, sans-serif; font-weight: normal; margin: 5pt 0 10pt 0;">
                <b>INVOICE #</b><br>
                {{ invoice.id }}
            </p>
            <p style="color: #444444; font-size: 10pt; font-family: Arial, Helvetica, sans-serif; font-weight: normal; margin: 5pt 0 10pt 0;">
                <b>ORDER #</b><br>
                {{ invoice.assignment.id }}
            </p>
            <p style="color: #444444; font-size: 10pt; font-family: Arial, Helvetica, sans-serif; font-weight: normal; margin: 5pt 0 10pt 0;">
                <b>DATE OF ISSUE</b><br>
                {{ invoice.createdAt|date('F j, Y, g:i A') }}
            </p>
            <p style="color: #444444; font-size: 10pt; font-family: Arial, Helvetica, sans-serif; font-weight: normal; margin: 5pt 0 10pt 0;">
                <b>DATE PAYMENT DUE</b><br>
                {{ invoice.dueDate|date('F j, Y, g:i A') }}
            </p>
            <p style="color: #444444; font-size: 10pt; font-family: Arial, Helvetica, sans-serif; font-weight: normal; margin: 5pt 0 10pt 0;">
                <b>BILLED TO</b><br>
                {{ invoice.student|oro_format_name }}<br>
                {{ invoice.student.email }}<br>
            </p>
            <p style="color: #444444; font-size: 10pt; font-family: Arial, Helvetica, sans-serif; font-weight: normal; margin: 5pt 0 10pt 0;">
                <b>COURSE NAME</b><br>
                {{ assignment.courseName }}<br>
            </p>
            <p style="color: #444444; font-size: 10pt; font-family: Arial, Helvetica, sans-serif; font-weight: normal; margin: 5pt 0 10pt 0;">
                <b>SERVICE TYPE</b><br>
                {{ assignment.term }}<br>
            </p>
            <p style="color: #444444; font-size: 10pt; font-family: Arial, Helvetica, sans-serif; font-weight: normal; margin: 5pt 0 10pt 0;">
                <b>AMOUNT DUE</b><br>
                <b>{{ invoice.amountOwed|oro_format_currency }}</b><br>
            </p>
            <table style="width: 100%;">
                <tbody>
                <tr>
                    <td style="padding: 5pt 0; background: #f85945; border-radius: 5px; width: 140pt; text-align: center">
                        <a style="color: #ffffff; font-size: 11pt; text-transform: uppercase; text-decoration: none; line-height: 1em; font-weight: bold; font-family: Arial, Helvetica, sans-serif;"
                           href="{{ oro_get_absolute_url('teachers_invoice_view', { id: invoice.id }) }}"
                           target="_blank">
                            VIEW INVOICE DETAILS
                        </a>
                    </td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
</table>
